#include <stdio.h>
int countOfProcessing(FILE *fp);
int main()
{
    char nfile[5];
    printf("Enter file name: ");
	scanf("%s", nfile);
    FILE *fp = fopen(nfile, "r");
    if (fp == NULL)
	{
		printf("Could not open file %s\n", nfile);
		return 0;
	}else{
	    int count=countOfProcessing(fp);
	    printf("%d\n",count);
	}

    return 0;
}
int countOfProcessing(FILE *fp){
    int stateOfBracket=0;
    int count=0;
    int ch;
    enum states { Process, 
                SAW_SLASH, 
                SAW_STAR, 
                SINGLE_COMMENT, 
                MULTI_COMMENT } state = Process;

   while(!feof(fp)){
        ch = fgetc(fp);
         switch( state )
         {
             case Process :
                switch( ch )
                 {
                     case '/'  : state = SAW_SLASH; break;
                     case ';' : count++; // fall-through
                    // case '{' : stateOfBracket=1;
                     case '}' : count++;
                     default   : break;
                 }
                  break;
             case SAW_SLASH :
                 switch( ch )
                 {
                     case '/'  : state = SINGLE_COMMENT; break;
                     case '*'  : state = MULTI_COMMENT; break;
                     default   : state = Process; break;
                  }
                  break;
            case SAW_STAR :
                switch( ch )
                {
                     case '/'  : state = Process; break;
                     case '*'  : break;
                     default   : state = MULTI_COMMENT; break;
                }
                break;
            case SINGLE_COMMENT :
                switch( ch )
                {
                    case '\n' : state = Process;  // fall through
                    default   : break;
                }
                break;
            case MULTI_COMMENT :
                switch( ch )
                {
                    case '*'  : state = SAW_STAR; break;
                    default   : break;
                }
                break;
             default: // NOT REACHABLE
             break;
         }
   }
  /* close the file */
  fclose(fp);

    return count;
}
